<div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-2xl mt-10">
  <h1 class="text-3xl font-bold text-gray-800 text-center">Contact Us</h1>
  <p class="text-gray-600 text-center mt-2">We'd love to hear from you. Fill out the form below to get in touch.</p>

  <!-- Flash Message for Errors -->
  <% if flash[:alert] %>
    <div class="bg-red-500 text-white text-center py-3 rounded-lg mb-6">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <%= form_with url: contact_path, method: :post, local: true, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-gray-700 font-medium">Your Name</label>
      <%= f.text_field :name, class: "w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value: params[:name] %>
    </div>

    <div>
      <label class="block text-gray-700 font-medium">Your Email</label>
      <%= f.email_field :email, class: "w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value: params[:email] %>
    </div>

    <div>
      <label class="block text-gray-700 font-medium">Message</label>
      <%= f.text_area :message, rows: 5, class: "w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value: params[:message] %>
    </div>

    <div class="text-center">
      <%= f.submit "Send Message", class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
    </div>
  <% end %>
</div>
