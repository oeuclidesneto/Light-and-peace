<div class="max-w-4xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold text-center text-blue-900 mb-8">Upcoming Events & Courses</h1>

  <% @events = [
    {
      title: "Intro to Spiritism",
      date: "Thursday, April 10, 2025 – 7:00 PM",
      description: "An open session to introduce newcomers to Spiritist teachings. All are welcome.",
      location: "Spiritist Centre, 38 Palmerston Rd, Unley SA",
      icon: "fa-solid fa-calendar-days"
    },
    {
      title: "Mediumship Development Workshop",
      date: "Saturday, May 3, 2025 – 10:00 AM to 2:00 PM",
      description: "A guided workshop focused on mediumship practices and ethical development.",
      location: "Spiritist Centre, 38 Palmerston Rd, Unley SA",
      icon: "fa-solid fa-hands-asl-interpreting"
    }
  ] %>

  <div class="space-y-6">
    <% @events.each do |event| %>
      <div class="bg-white shadow-lg rounded-xl p-6 border border-blue-100 hover:shadow-xl transition-shadow">
        <div class="flex items-center space-x-3 mb-2">
          <i class="<%= event[:icon] %> text-blue-600 text-xl"></i>
          <h2 class="text-2xl font-semibold text-blue-800"><%= event[:title] %></h2>
        </div>
        <p class="text-gray-700"><strong>Date:</strong> <%= event[:date] %></p>
        <p class="text-gray-700"><strong>Location:</strong> <%= event[:location] %></p>
        <p class="text-gray-800 mt-3 mb-4"><%= event[:description] %></p>

         <div class="flex justify-center">
  <%= link_to contact_path, class: "group inline-flex items-center gap-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded-md transition duration-300" do %>
    <span>Register</span>
    <i class="fas fa-arrow-right transform transition-transform duration-300 group-hover:translate-x-1"></i>
  <% end %>
</div>
      </div>
    <% end %>
  </div>
</div>
