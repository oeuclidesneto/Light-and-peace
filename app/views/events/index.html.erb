<div class="max-w-4xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold text-center text-blue-900 mb-8">Upcoming Events & Courses</h1>

  <% if @events.any? %>
    <% @events.each do |event| %>
        <div class="bg-white shadow-lg rounded-xl p-6 border border-blue-100 hover:shadow-xl transition-shadow">
          <div class="flex items-center space-x-3 mb-2">
            <i class="fas fa-calendar-days text-blue-600 text-xl"></i>
            <h2 class="text-2xl font-semibold text-blue-800"><%= event.title %></h2>
          </div>
          <p class="text-gray-700">
            <strong>Date:</strong> <%= Time.parse(event.date).strftime("%A, %B %-d, %Y â€“ %-I:%M %p") %>
          </p>
          <p class="text-gray-700"><strong>Location:</strong> Spiritist Centre, 38 Palmerston Rd, Unley SA</p>
          <p class="text-gray-800 mt-3 mb-4"><%= event.description %></p>

          <div class="flex justify-center">
            <%= link_to contact_path, class: "group inline-flex items-center gap-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded-md transition duration-300" do %>
              <span>Register</span>
              <i class="fas fa-arrow-right transform transition-transform duration-300 group-hover:translate-x-1"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 px-6 bg-white rounded-xl shadow-sm border border-blue-50">
      <div class="mx-auto w-24 h-24 bg-blue-50 rounded-full flex items-center justify-center mb-6">
        <i class="fas fa-calendar-check text-4xl text-blue-400"></i>
      </div>

      <h3 class="text-2xl font-semibold text-gray-700 mb-3">No Events Scheduled</h3>
      <p class="text-gray-600 max-w-md mx-auto mb-6">
        We're currently preparing our next gathering.
        The light of wisdom will shine again soon.
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <%= link_to "Contact Us", contact_path,
            class: "px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
      </div>

      <div class="mt-10 pt-6 border-t border-gray-100">
        <p class="text-sm text-gray-500 italic">
          "Peace is the light that guides us when events are still."
          <span class="block mt-1">- Spiritist Wisdom</span>
        </p>
      </div>
    </div>
  <% end %>
</div>
