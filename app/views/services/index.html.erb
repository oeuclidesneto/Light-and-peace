<div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-2xl mt-10">
  <h1 class="text-3xl font-bold text-gray-800 text-center">Our Services</h1>
  <p class="text-gray-600 text-center mt-2">Discover the spiritual and educational services we offer to the community.</p>

  <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @services.each do |service| %>
      <%= link_to service_link_path(service), class: "block" do %>
        <div class="bg-gray-100 p-4 rounded-lg shadow-md flex flex-col items-center space-y-2 text-center transform transition-transform duration-300 ease-in-out hover:scale-[1.03] hover:shadow-lg cursor-pointer min-h-[140px]">
          <% icon_class, text_color = case service.title.downcase
              when /study/ then ["fas fa-book-open", "text-blue-600"]
              when /energy/ then ["fas fa-hands-praying", "text-purple-600"]
              when /children|youth/ then ["fas fa-users", "text-yellow-600"]
              when /lecture/ then ["fas fa-microphone-alt", "text-green-600"]
              when /library/ then ["fas fa-book", "text-indigo-600"]
              when /fraternal/ then ["fas fa-hands-helping", "text-red-600"]
              when /gospel/ then ["fas fa-house", "text-orange-600"]
              else ["fas fa-circle", "text-gray-600"]
            end %>
          <i class="<%= icon_class %> text-4xl <%= text_color %>"></i>
          <div>
            <h2 class="text-xl font-semibold text-gray-800 text-center"><%= service.title %></h2>
            <p class="text-gray-600"><%= service.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="text-center mt-6">
    <%= link_to "Back to Home", root_path, class: "text-blue-600 hover:text-blue-700 font-semibold" %>
  </div>
</div>
