<div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
  <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-orange-50 to-white px-8 py-6 border-b border-gray-100">
      <div class="flex items-center space-x-4">
        <i class="fas fa-house text-4xl text-orange-600"></i>
        <h1 class="text-3xl font-bold text-gray-800">Gospel at Home</h1>
      </div>
    </div>

    <!-- Main Content -->
    <div class="p-8 pb-12">
      <!-- Description Section -->
      <div class="prose max-w-none text-gray-700 mb-8">
        <p class="text-lg leading-relaxed">
          Gospel at Home is a Spiritist practice aimed at promoting spiritual harmony and strengthening family bonds through reflection on the teachings of Jesus Christ as found in the Gospel According to Spiritism.
        </p>

        <div class="mt-6 p-4 bg-orange-50 border-l-4 border-orange-400 rounded-r-lg">
          <p class="text-gray-700 italic">
            "This moment of study and prayer creates an atmosphere of peace and balance, dispelling negative energies and fostering the moral development of participants."
          </p>
        </div>
      </div>

      <!-- Service Details Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <!-- Left Card -->
        <div class="bg-orange-50 p-6 rounded-lg">
          <h3 class="font-semibold text-orange-800 flex items-center mb-3">
            <i class="fas fa-clock mr-2"></i>
            Session Details
          </h3>
          <ul class="space-y-2">
            <li class="flex items-start">
              <i class="fas fa-check-circle text-orange-500 mr-2 mt-1"></i>
              <span>30-40 minute spiritual session</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check-circle text-orange-500 mr-2 mt-1"></i>
              <span>Conducted in your home</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check-circle text-orange-500 mr-2 mt-1"></i>
              <span>No special preparation needed</span>
            </li>
          </ul>
        </div>

        <!-- Right Card -->
        <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <h3 class="font-semibold text-gray-800 flex items-center mb-3">
            <i class="fas fa-hand-holding-water mr-2 text-orange-500"></i>
            Preparation
          </h3>
          <ul class="space-y-2">
            <li class="flex items-start">
              <i class="fas fa-check-circle text-orange-500 mr-2 mt-1"></i>
              <span>Provide glasses of water for each participant</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check-circle text-orange-500 mr-2 mt-1"></i>
              <span>Choose a quiet space</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check-circle text-orange-500 mr-2 mt-1"></i>
              <span>Open heart and mind</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Book Downloads Section -->
      <div class="mt-8 bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
          <i class="fas fa-file-pdf mr-2 text-orange-500"></i>
          Study Materials
        </h2>

        <div class="space-y-8">
          <!-- English Version -->
          <div class="flex flex-col md:flex-row gap-6">
            <div class="flex-shrink-0">
              <div class="bg-orange-100 w-full md:w-40 h-48 flex flex-col items-center justify-center rounded-lg p-4">
                <i class="fas fa-file-pdf text-5xl text-orange-600 mb-3"></i>
                <span class="text-xs text-orange-800 text-center">English Version</span>
              </div>
            </div>
            <div>
              <h3 class="font-bold text-lg text-gray-800">The Gospel According to Spiritism</h3>
              <p class="text-gray-600 text-sm mb-3">Allan Kardec</p>
              <p class="text-gray-700 mb-4">The complete moral teachings of Jesus with Spiritist interpretation.</p>
              <div class="flex flex-wrap gap-3">
                <%= link_to asset_path("The-Gospel-According-to-Spiritism-Allan-Kardec.pdf"),
                      download: "The Gospel According to Spiritism - Allan Kardec.pdf",
                      class: "inline-flex items-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg text-sm font-medium transition-colors" do %>
                  <i class="fas fa-download mr-2"></i> Download PDF
                <% end %>
                <%= link_to asset_path("The-Gospel-According-to-Spiritism-Allan-Kardec.pdf"),
                      target: "_blank",
                      class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg text-sm font-medium transition-colors" do %>
                  <i class="fas fa-external-link-alt mr-2"></i> View Online
                <% end %>
              </div>
            </div>
          </div>

          <!-- Portuguese Version -->
          <div class="flex flex-col md:flex-row gap-6 pt-6 border-t border-gray-100">
            <div class="flex-shrink-0">
              <div class="bg-orange-100 w-full md:w-40 h-48 flex flex-col items-center justify-center rounded-lg p-4">
                <i class="fas fa-file-pdf text-5xl text-orange-600 mb-3"></i>
                <span class="text-xs text-orange-800 text-center">Versão em Português</span>
              </div>
            </div>
            <div>
              <h3 class="font-bold text-lg text-gray-800">O Evangelho Segundo o Espiritismo</h3>
              <p class="text-gray-600 text-sm mb-3">Allan Kardec</p>
              <p class="text-gray-700 mb-4">Os ensinamentos morais de Jesus com interpretação espírita.</p>
              <div class="flex flex-wrap gap-3">
                <%= link_to asset_path("O-Evangelho-Segundo-o-Espiritismo-Allan-Kardec.pdf"),
                      download: "O Evangelho Segundo o Espiritismo - Allan Kardec.pdf",
                      class: "inline-flex items-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg text-sm font-medium transition-colors" do %>
                  <i class="fas fa-download mr-2"></i> Download PDF
                <% end %>
                <%= link_to asset_path("O-Evangelho-Segundo-o-Espiritismo-Allan-Kardec.pdf"),
                      target: "_blank",
                      class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg text-sm font-medium transition-colors" do %>
                  <i class="fas fa-external-link-alt mr-2"></i> View Online
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
